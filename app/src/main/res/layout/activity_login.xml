<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <LinearLayout
        android:padding="25dp"
        android:layout_width="match_parent"
        android:background="#42322A"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#F6EDE9"
            android:textStyle="bold"
            android:textSize="30dp"
            android:text="Sign In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#42322A"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:padding="10dp"
        android:text="USERNAME"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#6E5246"
            android:textStyle="bold"
            android:textSize="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etUser"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <TextView

            android:padding="10dp"
            android:text="PASSWORD"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#6E5246"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/etPass"
                android:inputType="textPassword"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/background_form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <CheckBox
            android:id="@+id/etBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textSize="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#6E5246"/>
        <TextView
            android:padding="10dp"
            android:text="Forgot your Password?"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="42mm"
            android:textColor="#6E5246"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="10dp"
            android:text="By signing in to GOX you agree to our terms and condition and privacy plicy"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="#6E5246"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btLogin"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:textSize="10dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:text="Log in"
            android:background="@drawable/button_style" />
        <TextView
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Go Back"/>

        <TextView
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:textSize="13dp"
            android:layout_height="wrap_content"
            android:textColor="#6E5246"
            android:text="New to GOX? Sign Up now"/>

    </LinearLayout>

</LinearLayout>